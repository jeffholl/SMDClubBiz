<div class="row" id="main-content">
  <div class="col-md-6 pull-right">
    <div class="input-group pull-right col-md-8 pull-left">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></button>
      </span>
      <input type="text" class="form-control">
    </div>
  </div>



  <div class="col-sm-6 col-md-6">

    <div class="row">
      <div class="col-md-10">
        <div class="row">
          <img src="http://placehold.it/100x100" class = "pull-left" width="65px">
            <h2>
              <%= link_to @club.club_name, club_path(@club) %> 
            </h2>
          <ul class="nav nav-tabs pull-right">
            <li class="active"><a href="#home" data-toggle="tab">Home</a></li>
            <li><a href="#gallery" data-toggle="tab">Gallery</a></li>
            <li><a href="#discussions" data-toggle="tab">Discussions</a></li>
          </ul>
        </div>  
        <div class="tab-content row">
          <div class="tab-pane fade in active" id="home">
