<h1>Confirm Membership</h1>
<p><strong>Members Name</strong><br><%= current_user.displayname %></p>
<p><strong>Club</strong><br><%= @club.club_name %></p>

<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id, :value => current_user.id %>
  </div>
  <div class="field">
    <%= f.label :club_id %><br>
    <%= f.text_field :club_id, :value => @club.id %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status, :value => "Pending" %>
  </div>
	<div class="actions">
    <%= f.submit %>
  </div>
<% end %>