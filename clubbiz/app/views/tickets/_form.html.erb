<div class="form-group col-sm-6">
  <%= f.label :ticket_type %><br>
  <%= f.text_field :ticket_type, class: "form-control", placeholder: "General Admission, Half Price, Last Minute" %>
</div>
<div class="form-group col-sm-4">
  <%= f.label :ticket_cost %><br>
  <%= f.text_field :ticket_cost, class: "form-control", placeholder: "eg 100" %>
</div>
<div class="form-group col-sm-2">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity, class: "form-control", placeholder: "eg 30" %>
</div>
<div class="form-group col-sm-6">
  <%= f.label :start_sale_datetime %>
  <%= f.text_field :start_sale_datetime, class:"form-control", placeholder: "Click to select" %>
</div>
<div class="form-group col-sm-6">
    <%= f.label :end_sale_datetime %><br>
    <%= f.text_field :end_sale_datetime, class: "form-control", :"data-field" => "datetime", placeholder: "Click to select" %>
</div>