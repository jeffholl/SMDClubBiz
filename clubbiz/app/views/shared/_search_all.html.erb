<%= form_tag(search_path, :method => 'get', id: 'search_form') do %>
	<div class="input-group">
		<%= text_field_tag :q, params[:q], class: "form-control", placeholder: "Seach Clubs and Events" %>
		<span class="input-group-btn">
			<%= submit_tag "Go",class: "btn btn-default", :name => nil %>
		</span>
	</div>
<% end %>