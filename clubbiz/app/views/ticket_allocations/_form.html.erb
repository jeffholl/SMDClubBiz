<%= form_for(@ticket_allocation) do |f| %>
  <% if @ticket_allocation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket_allocation.errors.count, "error") %> prohibited this ticket allocation from being saved:</h2>

      <ul>
      <% @ticket_allocation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Ticket info</h3>
  <p>Event Name: <%= @ticket.event.event_name %></p>
  <p>Event Start: <%= @ticket.event.start_datetime %></p>
  <p>Ticket Type: <%= @ticket.ticket_type %></p>
  <p>Ticket Cost: <%= @ticket.ticket_cost %></p>
  <p>Total Tickets: <%= @ticket.quantity %></p>
  <p>Tickets remaining: TBW</p>

  <h3>Ticket order</h3>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.collection_select(:user_id, User.all, :id, :first_name, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>
  <%= f.hidden_field :status, :value => "Ordered" %>
  <%= f.hidden_field :ticket_id, :value => @ticket.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>