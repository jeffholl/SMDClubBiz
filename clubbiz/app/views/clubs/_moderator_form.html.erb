<%= form_for(@membership, remote: true) do |f| %>
	<div class="form-group">
		<%= f.text_field :user_id, class: "form-control", placeholder: "User ID" %>
	</div>
	<div class="form-group">
		<%= f.select(:role, [["president", "president"],["moderator", "moderator"]],{}, {class: "form-control"}) %>
	</div>
		<% if @club %>
			<%= f.hidden_field :club_id, :value => @club.id %>
		<%= f.hidden_field :status, :value => "active" %>
		<% else %>
			<%= f.hidden_field :club_id, class: "cb-clubid" %>
		<%= f.hidden_field :status, :value => "pending" %>
		<% end %>
		<%= f.submit "Go", :class => "btn btn-primary" %>
<% end %>
