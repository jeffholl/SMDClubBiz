<% if !@club.club_comments.where(comment_type: "Comment").empty? %>
	<% @club.club_comments.where(comment_type: "Comment").each do |club_comment| %>
		
		<a class="pull-left" href="#">
			<span class="glyphicon glyphicon-chevron-right"></span>
		</a>

		<div class="media-body cb-comment-list-element">
			<h4 class="media-heading"><%= club_comment.comment_title %></h4>
			<%= club_comment.comment_body %><br>
			<small>Posted by <%= club_comment.user.displayname %>, <%= distance_of_time_in_words_to_now(club_comment.created_at) + " ago" %></small>
		</div>
	<% end %>
<% else %>
	<div><center>There are no comments, must be doing somethin' right</center></div>
<% end %>