<%= form_for(@club_news) do |f| %>
  <div class="form-group">
    <%= f.label :comment_title %><br>
    <%= f.text_field :comment_title, class: "form-control", placeholder: "Title" %>
  </div>
  <div class="form-group">
    <%= f.label :comment_body %><br>
    <%= f.text_field :comment_body, class: "form-control", placeholder: "News away, young sir/maam" %>
  </div>
  <div class="form-group">
  </div>
  <%= f.hidden_field :comment_type, :value => "news" %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :club_id, :value => @club.id %>
  <div class="form-group">
    <%= f.submit "Submit" %>
  </div>
<% end %>